<% if @article.errors.any? %>
<h3>The following errors occurs</h3>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for @article do |f| %>
    <div class="form-group col-md-10 col-md-offset-1">
      <%= f.label :title %> <br />
      <%= f.text_field :title, class: "form-control", autofocus: true, placeholder: "Enter a title" %>
    </div>

    <div class="form-group col-md-10 col-md-offset-1">
      <%= f.label :description %> <br />
      <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Description" %>
    </div>

    <div class="form-group col-md-10 col-md-offset-1">
      <%= f.submit class: "btn btn-primary" %>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Back to Articles listing", articles_path %> ]
    </div>
  </div>
</div>
