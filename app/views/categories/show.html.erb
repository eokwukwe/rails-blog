<h1 align="center"><%= "Category: " + @category.name %></h1>

<% if logged_in? && current_user.admin? %>
<div class="row">
  <div class="col-md-2 col-md-offset-5"">
    <%= link_to "Edit Category", edit_category_path(@category), class: "btn btn-xs btn-block btn-lg btn-success edit-category" %>
  </div>
</div>
<br>
<% end %>

<%= render 'articles/article', obj: @category_articles %>

<div align=" center">
    <%= will_paginate @category_articles %>
  </div>
