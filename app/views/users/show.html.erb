<h1 align="center">Welcome to <%= @user.username%>'s page</h1>

<div class="row">
  <div class="well col-md-3 center">
    <span class="user-image">
      <%= gravatar_for @user %>
    </span>
    <h3><%= @user.username %></h3>
    <% if current_user == @user %>
    <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-info btn-xs" %>
    <% end %>
    <% if !@user.admin? %>
    <div class="relationship">
      <span class="btn btn-success btn-xs">
        Followers
        <span class="badge">
          <%= @user.followers.count %>
        </span>
      </span>
      <span class="btn btn-primary btn-xs">
        Following
        <span class="badge">
          <%= @user.following.count %>
        </span>
      </span>
    </div>
    <% end %>
    <%= render 'follow_form' if logged_in? && (!@user.admin && !current_user.admin?) %>
  </div>
  <div class="col-md-9">
    <%= render 'articles/article', obj: @user_articles %>
    <div align="center">
      <%= will_paginate @user_articles %>
    </div>
  </div>
</div>
